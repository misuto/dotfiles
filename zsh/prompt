#!/bin/bash
#
# Prompt
#

precmd() {
    echo
}
parse_git_branch() {
    git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ (\1)/'
}
setopt PROMPT_SUBST
local return_code="%(?..%{$fg[red]%}%? â†µ%{$reset_color%})"
PROMPT='%{$fg[white]%}$(parse_git_branch) %20<...<%~%<< %{$reset_color%}\$ '
RPS1="${return_code}"
