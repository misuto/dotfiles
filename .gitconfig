[user]
    name = Matthieu Petiteau
    email = mpetiteau.pro@gmail.com

[core]
    autocrlf = input
    editor = vim

[commit]
    verbose = true

[diff]
    tool = vimdiff
    noprefix = true
    algorithm = patience
    renames = copies

[merge]
    tool = vimdiff

[push]
    default = simple

[color]
    ui = auto

[color "branch"]
    current = yellow
    local = 241
    remote = green

[color "diff"]
    meta = yellow
    frag = magenta
    old = red
    new = green

[color "status"]
    added = green
    changed = yellow
    untracked = magenta
